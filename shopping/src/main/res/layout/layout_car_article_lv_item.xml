<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <CheckBox
        android:id="@+id/cb_itemCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:button="@drawable/check_car_menu"
        android:focusable="true" />

    <!-- 商品图片  -->
    <ImageView
        android:id="@+id/iv_articleLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cb_itemCheckBox"
        android:src="@drawable/ceshi" />

    <TextView
        android:id="@+id/tv_articleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_articleLogo"
        android:ellipsize="end"
        android:lines="2"
        android:text="iphone 5 3G时代最好的手机，苹果公司生产,现在十分便宜,现在十分便宜,现在十分便宜"
        android:textColor="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_articleLogo">

        <TextView
            android:id="@+id/tv_buyNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"

            />

        <TextView
            android:id="@+id/tv_articlePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_articleLogo"
            android:text="Y:4999.0"
            android:textColor="@color/red" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_articleLogo"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_articleLogo"
        android:text="Y:4999.00"
        android:textColor="@color/red" />


</RelativeLayout>
